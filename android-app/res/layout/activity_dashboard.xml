<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout style="@style/Form" >

        <Button
            android:id="@+id/button_manage_view_educational_content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_manage_educational_content"
            android:gravity="center" />

        <Button
            android:id="@+id/button_access_requests"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_access"
            android:gravity="center"
            android:text="@string/action_access_requests"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_edit"
            android:gravity="center"
            android:text="@string/action_edit_profile" />

        <Button
            android:id="@+id/button_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_info"
            android:gravity="center"
            android:text="@string/action_info" />
    </LinearLayout>

</ScrollView>