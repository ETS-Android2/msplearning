<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

	<persistence-unit name="postgresPU" transaction-type="RESOURCE_LOCAL">
		
		<!-- JPA provider -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<!-- Maped entities (necessary for creating tables by property "hibernate.hbm2ddl.auto") -->
		<class>com.msplearning.entity.Address</class>
		<class>com.msplearning.entity.City</class>
		<class>com.msplearning.entity.Country</class>
		<class>com.msplearning.entity.Email</class>
		<class>com.msplearning.entity.Phone</class>	
		<class>com.msplearning.entity.State</class>
		<class>com.msplearning.entity.Student</class>
		<class>com.msplearning.entity.Teacher</class>
		<class>com.msplearning.entity.User</class>	
		
		<!-- Connection configurations -->
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.username" value="user_public" />
			<property name="hibernate.connection.password" value="senha_public" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://www.uniongroupdev.com.br:5432/msplearning?autoReconnect=true" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.archive.autodetection" value="class, hbm" />
		</properties>
		
	</persistence-unit>

</persistence>